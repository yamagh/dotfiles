# config
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# alt-{right,left,up,down} でその方向にウィンドウサイズを変化させる
bind right:alt       resize +1% +0
bind left:alt        resize -1% +0
bind up:alt          resize +0  -2%
bind down:alt        resize +0  +2%

# 右下の位置を固定してウィンドウサイズを変化させる
bind right:ctrl;alt  resize -1% +0  bottom-right
bind left:ctrl;alt   resize +1% +0  bottom-right
bind up:ctrl;alt     resize +0  +2% bottom-right
bind down:ctrl;alt   resize +0  -2% bottom-right

# ctrl-alt-shift-{right, left} を押すたびにウィンドウサイズと位置を切り替える
# chain action1 | action2 と設定すれば押す度に挙動が変化する
alias cas    ctrl;alt;shift
alias halfx  bar-resize:screenSizeX/2
alias halfy  bar-resize:screenSizeY/2
alias quad   resize:screenSizeX/2;screenSizeY/2
alias X1-3   bar-resize:screenSizeX*1/3
alias Y1-3   bar-resize:screenSizeY*1/3
alias X2-3   bar-resize:screenSizeX*2/3
alias Y2-3   bar-resize:screenSizeY*2/3
alias X1-4   bar-resize:screenSizeX/4
alias Y1-4   bar-resize:screenSizeY/4
alias X3-4   bar-resize:screenSizeX*3/4
alias Y3-4   bar-resize:screenSizeY*3/4

bind right:${cas} chain push right ${X1-4} | push right ${X1-3} | push right ${halfx} | push right ${X2-3} | push right ${X3-4} | corner top-right ${quad} | corner bottom-right ${quad}
bind left:${cas} chain push left ${X1-4} | push left ${X1-3} | push left ${halfx} | push left ${X2-3} | push left ${X3-4} | corner top-left ${quad} | corner bottom-left ${quad}
bind down:${cas} chain push bottom ${halfy} | push up ${halfy}

# Full Screen
bind up:${cas}  corner top-left resize:screenSizeX;screenSizeY

# Move Window
bind right:shift;alt nudge +1% +0
bind left:shift;alt  nudge -1% +0
bind up:shift;alt    nudge +0  -2%
bind down:shift;alt  nudge +0  +2%

# Undo
bind `:alt undo

# Focus
alias terminal 'ターミナル'
alias safari   'Safari'
alias twitter  'Twitter'
alias vim      'MacVim'
alias atom     'Atom'
alias chrome   'Chrome'
bind 1:alt focus ${terminal}
bind 2:alt focus ${atom}
bind 3:alt focus ${chrome}
bind 9:alt focus ${twitter}
bind 0:alt focus ${vim}

# iTerm, Emacs, Google Chrome をぐるぐるする
layout jobLayout1 ${safari} push right ${halfx}
layout jobLayout1 ${safari} push left ${halfx}
layout jobLayout2 ${twitter} push left ${halfx}
layout jobLayout2 ${terminal} push right ${halfx}
layout jobLayout3 ${terminal} push left ${halfx}
layout jobLayout3 ${twitter} push right ${halfx}
bind 1:ctrl;alt	  chain sequence layout jobLayout1 > focus ${safari} > focus ${terminal} | sequence layout jobLayout2 > focus ${twitter} > focus ${safari} | sequence layout jobLayout3 > focus ${terminal} > focus ${safari}

